<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange"
    android:orientation="vertical"
    tools:ignore="ContentDescription"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="400dp"
        android:layout_height="175dp"
        android:layout_alignParentTop="true"

        android:layout_marginTop="84dp"
        android:src="@drawable/planta" />

    <ImageView
        android:layout_width="400dp"
        android:layout_height="95dp"
        android:src="@drawable/texto" />

    <TextView
        android:layout_width="171dp"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"

        android:layout_marginLeft="247dp"

        android:layout_marginTop="247dp"
        android:layout_marginEnd="224dp"
        android:layout_marginRight="224dp"
        android:layout_marginBottom="171dp"
        android:text="Change Actuators"
        android:textColor="@color/black"
        android:textSize="19dp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="171dp"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"

        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="172dp"
        android:text="Change Thresholds"
        android:textColor="@color/black"
        android:textSize="19dp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/button_actuators"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="51dp"
        android:layout_marginBottom="105dp"
        android:text="Change" />

    <Button
        android:id="@+id/button_threshold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="55dp"
        android:layout_marginRight="52dp"
        android:layout_marginBottom="105dp"
        android:text="Change" />

    <TextView
        android:id="@+id/relatorio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="303dp"
        android:text="Relatorio da planta"
        android:textSize="17dp"
        />

    <Button
        android:id="@+id/button_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="231dp"
        android:text="Status" />


</RelativeLayout>